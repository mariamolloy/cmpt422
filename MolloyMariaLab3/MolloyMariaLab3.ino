/*  Maria Molloy  Lab 3: Feel the heat!*/const int sensorPin = A0;const int redPin = 10;const int bluePin = 11;const int greenPin = 9;float redVal = 0;float blueVal = 0;float greenVal = 0;int sensorVal = 0;int index = 0;const float baselineTemp = 19.0;const float maxTemp = 26.0;float tempAvg = 0;float x = 0;float tempVals[5] = {};void setup() {  Serial.begin(9600);  pinMode(greenPin, OUTPUT);  pinMode(redPin, OUTPUT);  pinMode(bluePin, OUTPUT);}void loop() {    sensorVal = analogRead(sensorPin);  tempVals[index] = sensorVal;  tempAvg = 0;  //To calculate a rolling average  for (int i = 0; i < 5; i++) {    tempAvg = tempAvg + tempVals[i];  }  tempAvg = tempAvg / 5.0;  Serial.print('\n');  Serial.println("Sensor value: ");  Serial.print(sensorVal);  Serial.print(", Normalized sensor value: ");  Serial.print(tempAvg);  //conversion from sensor value to voltage  float voltage = (tempAvg / 1024.0) * 5.0;  Serial.print(", Volts: ");  Serial.print(voltage);  //conversion from voltage to temperature  Serial.print(", degrees C: ");  float temperature = (voltage - .5) * 100.0;  Serial.print(temperature);  //to calculate the proportional value of the red LED to the current temperature  x = ((temperature - baselineTemp) * 255.0) / (maxTemp - baselineTemp);  redVal =  x;  blueVal = 255 - x;  greenVal = 0;  Serial.print(", Over threshold: ");  Serial.print(temperature - baselineTemp);  Serial.print(", Red Value: ");  Serial.print(redVal);  Serial.print(", Blue Value: ");  Serial.print(blueVal);  analogWrite(redPin, redVal);  analogWrite(bluePin, blueVal);  analogWrite(greenPin, greenVal);  if (index == 4) {    index = 0;  }  else {    index++;  }}